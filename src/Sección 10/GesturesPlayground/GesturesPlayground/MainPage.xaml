<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GesturesPlayground.MainPage"
    Title="Gestures Playground">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button
                Text="Image"
                Clicked="OnImageButtonClicked"/>
            <Button 
                Text="Border"
                Clicked="OnFrameButtonClicked"/>
            <Button 
                Text="XAML"
                Clicked="OnXamlButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
